{
  "name": "attune",
  "displayName": "Attune",
  "description": "Seamlessly switch between execution environments (Node.js, Python) in VS Code.",
  "version": "0.0.1",
  "publisher": "Kinnito",
  "icon": "icon.png",
  "author": {
    "name": "Daniel Kinnito"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/DanielKinnito/attune.git"
  },
  "bugs": {
    "url": "https://github.com/DanielKinnito/attune/issues"
  },
  "homepage": "https://github.com/DanielKinnito/attune#readme",
  "keywords": [
    "environment",
    "python",
    "nodejs",
    "venv",
    "nvm",
    "terminal",
    "polyglot",
    "environments",
    "switch"
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "attune.switch",
        "title": "Attune: Switch Environment",
        "category": "Attune"
      }
    ],
    "walkthroughs": [
      {
        "id": "attune.welcome",
        "title": "Get Started with Attune",
        "description": "Learn how to manage your development environments with Attune.",
        "steps": [
          {
            "id": "attune.welcome.intro",
            "title": "Welcome to Attune",
            "description": "Attune helps you seamlessly switch between Node.js and Python environments.\n[Learn more](https://github.com/DanielKinnito/attune)",
            "media": {
              "image": "icon.png",
              "altText": "Attune Logo"
            }
          },
          {
            "id": "attune.welcome.switch",
            "title": "Switch Environments",
            "description": "Click the status bar item or run the **Attune: Switch Environment** command to pick an environment.\n[Run Command](command:attune.switch)",
            "media": {
              "markdown": "media/walkthrough-switch.md"
            }
          },
          {
            "id": "attune.welcome.config",
            "title": "Custom Configuration",
            "description": "Create a `.vscode/attune.json` file to define custom profiles and startup commands.\n[Open Sample Config](command:workbench.action.files.newUntitledFile)",
            "media": {
              "markdown": "media/walkthrough-config.md"
            }
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.3.3",
    "@vscode/test-electron": "^2.3.8"
  }
}